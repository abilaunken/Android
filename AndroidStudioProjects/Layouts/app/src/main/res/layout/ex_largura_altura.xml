<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:text="PRIMEIRO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/primeiroBotao"/>
    <Button
            android:text="SEGUNDO BOTÃO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/segundoBotao"/>
    <Button
            android:text="@string/terceiro_botao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/terceiroBotao"/>
    <Button
            android:text="QUARTO BOTÃO"
            android:layout_width="@dimen/largura_botao"
            android:layout_height="match_parent" android:id="@+id/quartoBotao"/>
</LinearLayout>